include ../input/input
include ../calendar/calendar
mixin calendar-range({dateFinish, dateStart})  
    .date-range
        .date-range__inputs
            .date-range__date-start
                +input({title:dateStart.title,  withButton: true,variantButton: "gray",symbolButton: "expand_more",typeButton: "button",readonly: true, placeholder: "ДД.ММ.ГГГГ", colorPlaceholder:"dark"})
            .date-range__date-finish    
                +input({title:dateFinish.title,  withButton: true,variantButton: "gray",symbolButton: "expand_more",typeButton: "button",readonly: true, placeholder: "ДД.ММ.ГГГГ", colorPlaceholder:"dark"})
        .date-range__calendar
            +calendar({parentEl:"date-range", altInput:"date-range__date-finish"})