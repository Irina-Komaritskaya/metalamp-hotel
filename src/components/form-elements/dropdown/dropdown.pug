//-value и текст передавать как объект и циклом добавлять.
//-если открыт - нижний радиус 0
//- верх input, низ див или календарь  
//- запретить редактирование - ридонли
//-ul.dropdown__content - ul__dropdown-content
//-.dropdown__option_btn - button.
include ../text-field/text-field

mixin dropdown({name, id, state, title, value})
    -
        let textFildOptions={
            name:name, 
            title:title, 
            value:value,
            withButton:true, 
            variantButton: "gray", 
            symbolButton:"expand_more", 
            typeButton:"button",
            fcButton:`alert(1)`
        }

    .dropdown__inner
        +text-field(textFildOptions)
        button.dropdown__button(type="button" id='MYBTN').dropdown__button_icon_expand-more

    ul.dropdown__content
        li.dropdown__option
            span.dropdown__option_caption Взрослые
            .dropdown__option_btn_inner
                .dropdown__option_btn.dropdown__option_btn_disabled.dropdown__option_btn_minus -
                span.dropdown__option__counter 0 
                .dropdown__option_btn.dropdown__option_btn_plus +

