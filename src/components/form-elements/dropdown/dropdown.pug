include ../input/input
include ../list-counter/list-counter
include ../calendar/calendar

mixin dropdown({name, isOpen, content, value, title, variant, items,  dateRange, confirmButtons, placeholder})
    -
        input=input || {}
        let inputOptions={
            title:title, 
            value:value,
            variant: isOpen ? "focused" : " ",
            withButton:true, 
            variantButton: "gray", 
            symbolButton:"expand_more", 
            typeButton:"button",
            readonly:true,
            placeholder: placeholder

        }

        let contentClass = "dropdown__content"
        let contentInnerClass = "dropdown__content-inner"
        if(!isOpen) {contentClass+=" dropdown__content-unexpand"}
        if(isOpen){contentClass+=" dropdown__content-expand"}
        if(!isOpen){contentInnerClass+=" dropdown__content-inner-closed"}

    .dropdown
        +input(inputOptions)
        div(class=contentInnerClass)
            div(class=contentClass )
                if(variant==="counter")
                    +list-counter({forElement:"dropdown", items, content, confirmButtons})
                if(variant==="calendar")  
                    +calendar()


