include ../like-button/like-button
mixin feedback
    .feedback__inner 
        .feedback__img
            img(src=("imgs/avatar.png") alt="avatar") 
        .feedback__title-inner
            .feedback__name="Мурад Сафронов" 
            .feedback__date="5 дней назад"
